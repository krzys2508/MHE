        cout << "# count HC: " << c << "; dt:  " << dt << endl;
      });
   int goalHCS = goal_function(best_solutionHCS);
    cout<<"Best found soulution using HillClimb Stochastic :";
   printSolution(best_solutionHCS);
   cout<<"With a score of ";
   cout<<goalHCS;
    cout<<endl;
     my_result_vector best_solutionHC = hill_climb(problem, 10,[](int c, double dt) {
